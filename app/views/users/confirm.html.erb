<h3>以下の内容で送信してもよろしいですか？</h3>

<%= form_with(model: @user, local: true) do |form| %>
  <%= form.hidden_field :family_name %>
  <%= form.hidden_field :first_name %>
  <%= form.hidden_field :email %>
  <%= form.hidden_field :birth_year %>
  <%= form.hidden_field :birth_month %>
  <%= form.hidden_field :birth_day %>
  <%= form.hidden_field :gender %>

  <table>
    <tr>
      <td>お名前：</td>
      <td><%= @user.family_name %><%= @user.first_name %>様</td>
    </tr>
    <tr>
      <td>メールアドレス：</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>生年月日：</td>
      <td><%= @user.birth_year %>年<%= @user.birth_month %>年<%= @user.birth_day %>日</td>
    </tr>
    <tr>
      <td>性別：</td>
      <td>
        <% if @user.gender == '1' %>
          男性
        <% else %>
          女性
        <% end %>
      </td>
    </tr>
  </table>
  <%= form.submit '戻る', name: 'back' %>
  <%= form.submit '登録する' %>
<% end %>
